// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DB_HOST")
}

model User {
  id          Int        @id @default(autoincrement())
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  email       String     @unique
  hash        String
  firstname   String
  lastname    String
  phonenumber String
  adress      String
  orders      Order[]
  favorites   Favorite[]
}

model Restaurant {
  id       Int        @id @default(autoincrement())
  name     String
  location String
  latitude  Float
  longitude Float
  id_menu  Int        @unique
  menu     Menu       @relation(fields: [id_menu], references: [id])
  Order    Order[]
  Favorite Favorite[]
}

model Menu {
  id    Int        @id @default(autoincrement())
  items MenuItem[]
  Restaurant Restaurant?
}

model MenuItem {
  id      Int    @id @default(autoincrement())
  name    String
  price   Float
  menu_id Int
  menu    Menu   @relation(fields: [menu_id], references: [id])
}

model Order {
  id             Int        @id @default(autoincrement())
  user_id        Int
  restaurant_id  Int
  menu_item      String
  quantity       Int
  type           String
  state          String
  specifications String?
  user           User       @relation(fields: [user_id], references: [id])
  restaurant     Restaurant @relation(fields: [restaurant_id], references: [id])
}

model Favorite {
  id            Int         @id @default(autoincrement())
  client        User        @relation(fields: [client_id], references: [id])
  client_id     Int
  restaurant    Restaurant? @relation(fields: [restaurant_id], references: [id])
  restaurant_id Int?
}
